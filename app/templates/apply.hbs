<div class="form-horizontal form-group form-group-lg row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-5 col-md-offset-0">
    {{input type="text" value=method class="form-control" placeholder="What's your preferred platform of contact? e.g. Steam, Battle.net, Discord..." autofocus="autofocus"}}
  </div>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-5 col-md-offset-0">
    {{input type="text" value=contact class="form-control" placeholder="How can you be contacted on that platform??" autofocus="autofocus"}}
  </div>
  <div class="col-xs-10 col-xs-offset-1 col-sm-20 col-sm-offset-0 col-md-5 col-md-offset-0">
    {{textarea class="form-control" placeholder="Fill in your application here!" rows="15" value=text}}
  </div>

  <button disabled={{isDisabled}} {{action 'submitApplication'}} class="btn btn-primary btn-lg btn-block">Submit Application</button>
</div>


  {{outlet}}
